@model IEnumerable<Movie_Ticket_Booking_System.Models.City>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cities</h2>

<p>
    @Html.ActionLink("Create New City", "CreateCity") <br/>
    @Html.ActionLink("Create New Movie", "CreateMovies") <br />
    @Html.ActionLink("Cinemas", "IndexCinema") <br />
    @Html.ActionLink("Shows", "IndexShow")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Delete", "DeleteCity", new { id=item.Id })
        </td>
    </tr>
}

</table>
