@model IEnumerable<Movie_Ticket_Booking_System.Models.Show>

@{
    ViewBag.Title = "IndexShow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>IndexShow</h2>

<p>
    @Html.ActionLink("Create New Show in Cinema", "IndexCinema")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Halls.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.movieDetails.MovieName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.createOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.startTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.endDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Halls.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.movieDetails.MovieName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.createOn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.startTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.endDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditShow", new { id=item.ID }) |
            @Html.ActionLink("Delete", "DeleteShow", new { id=item.ID })
        </td>
    </tr>
}

</table>
