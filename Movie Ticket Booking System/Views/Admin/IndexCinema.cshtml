@model IEnumerable<Movie_Ticket_Booking_System.Models.Cinema>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CreateCinema")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.City.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CinemaName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.totalHalls)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.City.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CinemaName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.totalHalls)
        </td>
        <td>
            @Html.ActionLink("Create Show", "CreateShow", new { CinemaId = item.Id }) |
            @Html.ActionLink("Delete", "DeleteCinema", new { id=item.Id })
        </td>
    </tr>
}

</table>
